{% extends 'base.html.twig' %}

{% block body %}

    <h1>List of all posts</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <td>ID</td>
                <td>Title</td>
                <td>Options</td>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>
                    <a href="{{ path('post.show', {id: post.id}) }}">
                        {{ post.title }}
                    </a>
                </td>
                <td>
                    <a href="{{ path('post.show', {id: post.id}) }}" class="btn btn-primary">Show</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    

{% endblock %}
